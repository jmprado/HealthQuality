@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@if (Model.carList != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Make
                </th>
                <th>
                    Model
                </th>
                <th>
                    Year
                </th>
                <th>
                    Doors
                </th>
                <th>
                    Color
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model.carList)
            {
                <tr>
                    <td>
                        @car.Id
                    </td>
                    <td>
                        @car.Make
                    </td>
                    <td>
                        @car.Model
                    </td>
                    <td>
                        @car.Year
                    </td>
                    <td>
                        @car.Doors
                    </td>
                    <td>
                        @car.Color
                    </td>
                    <td>
                        <label for="input_@car.Id">
                            Try to guess the car price:
                        </label>
                        <input type="number" id="input_@car.Id" maxlength="9" />
                    </td>
                    <td>
                        <button class="btn btn-primary btn_guess" id="btn_@car.Id">Guess</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<div class="modal" tabindex="-1" role="dialog" id="modal_success">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Guess Attempt</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h3 class="text-success">Good job.</h3>
        <p>Your guess is within range.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="modal_fail">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Guess Attempt</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <h3 class="text-danger">Ops, not this time.</h3>
        <p>Change the guess value and try again.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
